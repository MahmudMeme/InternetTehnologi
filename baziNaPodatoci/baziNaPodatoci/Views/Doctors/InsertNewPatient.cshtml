@model baziNaPodatoci.Models.DoctorPatients
@{
    ViewBag.Title = "InsertNewPatient";
}

<h2>InsertNewPatient for @Model.Doctor.Name</h2>


@using (Html.BeginForm("InsertNewPatient", "Doctors"))
{
    <div class="form-group">
        @Html.DropDownListFor(m => m.PatientId, new SelectList(Model.PatientsList, "Id", "Name"), new { @class = "form-control" })
        @Html.HiddenFor(m => m.PatientId)
        @Html.HiddenFor(m => m.DocotrId)
    </div>

    <button type="submit">dodadi</button>
}

